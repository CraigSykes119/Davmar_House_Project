---
import RoomCard from './RoomCard.astro';

const basePath = "/Davmar_House_Project"; // Ensure GitHub Pages compatibility

const rooms = [
  {
    title: "Standard Room",
    price: "€90 per night",
    imgSrc: `${basePath}/room_images/STDroom.jpg`, // Fixed path
    description: "A cozy standard room with modern amenities."
  },
  {
    title: "Deluxe Room",
    price: "€120 per night",
    imgSrc: `${basePath}/room_images/DELroom.jpg`, // Fixed path
    description: "A spacious deluxe room with a scenic view."
  },
  {
    title: "Suite",
    price: "€150 per night",
    imgSrc: `${basePath}/room_images/SUITEroom.jpg`, // Fixed path
    description: "Our most luxurious suite with premium features."
  }
];
---

<section class="rooms-list container">
  <div class="row justify-content-center">
    {rooms.map((room) => (
      <div class="col-md-4 d-flex flex-column">
        <RoomCard {...room} />
      </div>
    ))}
  </div>
</section>

<style>
  .rooms-list {
    margin-bottom: 4rem; /* Adds spacing below to push footer down */
  }
</style>
