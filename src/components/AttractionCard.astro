---
const { title, type, link, imgSrc } = Astro.props;
---

<div class="attraction-card" data-type={type.toLowerCase()}>
  <img src={imgSrc} alt={title} class="attraction-image" loading="lazy" />
  <div class="attraction-info">
    <h3>{title}</h3>
    <p class="attraction-type">{type}</p>
    <a href={link} target="_blank" class="learn-more">Learn More</a>
  </div>
</div>


<style>
  .attraction-card {
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
    text-align: center;
    display: flex;
    flex-direction: column;
    height: 100%; /* Ensures all cards stretch equally */
  }

  .attraction-card:hover {
    transform: scale(1.05);
  }

  .attraction-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .attraction-info {
    padding: 15px;
    flex-grow: 1; /* Allows text section to expand as needed */
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Pushes button to bottom */
  }

  .attraction-type {
    color: #12763e;
    font-weight: bold;
    margin-bottom: 10px; /* Ensure spacing */
  }

  .learn-more {
    display: inline-block;
    padding: 8px 12px;
    background-color: #12763e;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    margin-top: auto; /* Ensures alignment at bottom */
  }

  .learn-more:hover {
    background-color: #0e5b2e;
  }

  @media (max-width: 600px) {
    .attraction-card {
      aspect-ratio: 1 / 1; /* Makes it a square */
      height: auto; /* Allow it to resize naturally */
    }

    .attraction-image {
      height: 50%; /* Image takes up half the card */
    }

    .attraction-info {
      height: 50%; /* Text section takes up the other half */
    }
  }
</style>
