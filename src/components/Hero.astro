---
import Swiper from 'swiper';
import { Navigation, Pagination } from 'swiper/modules';

// Import Swiper styles
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';
---

<section class="hero">
  <div class="swiper">
    <div class="swiper-wrapper">
      <!-- Slide 1 with Overlay -->
      <div class="swiper-slide">
        <img src="/Davmar_House_Project/hero_images/Hero01.webp" alt="Davmar House - Exterior View" />
        <div class="hero-overlay">
          <h1 class="hero-title">Cozy Guesthouse</h1>
          <p class="hero-text">Contact us today to enquire</p>
          <a href="/Davmar_House_Project/contact" class="hero-cta">Contact Us</a>
        </div>
      </div>

      <!-- Slide 2 with Overlay -->
      <div class="swiper-slide">
        <img src="/Davmar_House_Project/hero_images/Hero02.webp" alt="Cozy Bedroom at Davmar House" />
        <div class="hero-overlay">
          <h1 class="hero-title">Comfortable Rooms</h1>
          <p class="hero-text">Everything you need</p>
          <a href="/Davmar_House_Project/rooms" class="hero-cta">View Rooms</a>
        </div>
      </div>

      <!-- Slide 3 with Overlay -->
      <div class="swiper-slide">
        <img src="/Davmar_House_Project/hero_images/Hero03.webp" alt="Local Area" />
        <div class="hero-overlay">
          <h1 class="hero-title">Explore Blarney</h1>
          <p class="hero-text">Explore the village and city nearby</p>
          <a href="/Davmar_House_Project/attractions" class="hero-cta">Learn More</a>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    <div class="swiper-pagination"></div>

    <!-- Navigation -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<!-- Run Swiper on Client Side -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    import("swiper").then((Swiper) => {
      import("swiper/modules").then((modules) => {
        const { Navigation, Pagination } = modules;
        new Swiper.default('.swiper', {
          modules: [Navigation, Pagination],
          direction: 'horizontal',
          loop: true,
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
          navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
          },
        });
      });
    });
  });
</script>
