---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
---

<section class="hero">
  <div class="swiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <img src="../assets/hero_images/Hero1" alt="Davmar House - Exterior View" />
      </div>
      <div class="swiper-slide">
        <img src="../assets/hero_images/Hero2" alt="Cozy Bedroom at Davmar House" />
      </div>
      <div class="swiper-slide">
        <img src="../assets/hero_images/Hero3" alt="Local Area" />
      </div>
    </div>

    <!-- Pagination -->
    <div class="swiper-pagination"></div>

    <!-- Navigation -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>
</section>

<!-- Load Swiper JS in the browser -->
<script src="/scripts/swiper_init.js" defer></script>
