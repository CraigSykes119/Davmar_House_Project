const lat = "51.940363"; // Blarney Latitude
const lon = "-8.568047"; // Blarney Longitude
const units = "metric";

// Fetch weather data
const fetchWeather = async () => {
  try {
    const weatherApiUrl = `https://api.openweathermap.org/data/2.5/weather?lat=${lat}&lon=${lon}&units=${units}&appid=${apiKey}`;
    console.log("ğŸŒ Fetching from URL:", weatherApiUrl);

    const response = await fetch(weatherApiUrl);
    if (!response.ok) throw new Error("âŒ Failed to fetch weather data");

    return await response.json();
  } catch (error) {
    console.error("âŒ Error fetching weather:", error);
    return null;
  }
};

// Get weather data
const weatherData = await fetchWeather();
