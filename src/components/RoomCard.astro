---
const { title, price, imgSrc, description } = Astro.props;
---

<div class="card room-card d-flex flex-column h-100">
  <img src={imgSrc} alt={title} class="card-img-top" />
  <div class="card-body d-flex flex-column flex-grow-1">
    <h5 class="card-title">{title}</h5>
    <p class="card-text flex-grow-1">{description}</p>
    <p class="room-price">{price}</p>
  </div>
</div>

<style>
  .room-card {
    width: 100%;
    max-width: 350px;
    background: white;
    padding: 1rem;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.2s ease-in-out;
    min-height: 450px; /* Ensuring equal height */
  }

  .room-card:hover {
    transform: scale(1.02);
  }

  .card-img-top {
    width: 100%;
    height: 200px; /* Fixed height for consistency */
    object-fit: cover;
    border-radius: 8px 8px 0 0;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .room-price {
    font-size: 1.2rem;
    color: #12763e;
    font-weight: bold;
  }
</style>
