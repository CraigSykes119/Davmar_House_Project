---
import AttractionCard from './AttractionCard.astro';
---

<section class="attractions-section">
  <!-- Filter Buttons -->
  <div class="attractions-filters">
    <button class="filter-btn active" data-filter="all">All</button>
    <button class="filter-btn" data-filter="bar">Bars</button>
    <button class="filter-btn" data-filter="restaurant">Restaurants</button>
    <button class="filter-btn" data-filter="takeaway">Takeaways</button>
    <button class="filter-btn" data-filter="activity">Activities</button>
  </div>

  <!-- Attractions Grid -->
  <div class="attractions-grid">
    <!-- Local Bars -->
    <AttractionCard title="Muskerry Arms Bar" type="bar" link="https://www.muskerryarms.com/" imgSrc="/attraction_images/Muskerry_arms_logo.png" />
    <AttractionCard title="Aunties Bar" type="bar" link="https://www.facebook.com/AuntiesBar.Tower/" imgSrc="/attraction_images/Aunties_logo.jpg" />
    <AttractionCard title="Costigans Bar" type="bar" link="http://costiganspub.ie/" imgSrc="/attraction_images/Costigans_Logo.png" />
    <AttractionCard title="Blarney Castle Hotel Bar" type="bar" link="https://blarneycastlehotel.com/" imgSrc="/attraction_images/Castle_hotel_logo.png" />

    <!-- Local Restaurants -->
    <AttractionCard title="Amore Italiano" type="restaurant" link="http://www.eat-in-it.com/" imgSrc="/attraction_images/amore_italiano.png" />
    <AttractionCard title="Blarneys Burger" type="restaurant" link="https://www.blarneyburger.ie/" imgSrc="/attraction_images/Blarney_burger_logo.png" />
    <AttractionCard title="Tung Sing" type="restaurant" link="https://tungsingblarney.ie/delivery" imgSrc="/attraction_images/Tung_sing_logo.png" />
    <AttractionCard title="Soba" type="restaurant" link="https://www.soba.ie/" imgSrc="/attraction_images/soba_logo.png" />

    <!-- Local Takeaways -->
    <AttractionCard title="Apache Pizza" type="takeaway" link="https://www.apache.ie/" imgSrc="/attraction_images/Apache_Pizza_logo.jpg" />
    <AttractionCard title="Roosters Piri Piri" type="takeaway" link="https://www.roosterspiripiri.com/" imgSrc="/attraction_images/roosters_logo.jpg" />
    <AttractionCard title="Dominoes" type="takeaway" link="https://www.dominos.ie/" imgSrc="/attraction_images/dominoes_logo.png" />
    <AttractionCard title="Four Star Pizza" type="takeaway" link="https://fourstarpizza.ie/" imgSrc="/attraction_images/four_star_logo.png" />

    <!-- Activities -->
    <AttractionCard title="Blarney Castle and Gardens" type="activity" link="https://blarneycastle.ie" imgSrc="/attraction_images/blarney_castle.png" />
    <AttractionCard title="Cork City Gaol" type="activity" link="https://corkcitygaol.com/" imgSrc="/attraction_images/cork_gaol.png" />
    <AttractionCard title="Local GAA Matches" type="activity" link="https://www.blarneygaa.ie/" imgSrc="/attraction_images/blarney_gaa.png" />
    <AttractionCard title="Cobh Cathedral" type="activity" link="https://cobhcathedralparish.ie/" imgSrc="/attraction_images/cobh_cathedral.png" />
    <AttractionCard title="SuperValu Páirc Uí Chaoimh" type="activity" link="https://gaacork.ie/paircuichaoimh/" imgSrc="/attraction_images/SuperValu_Páirc_Uí_Chaoimh_Logo.jpg" />
  </div>
</section>

<!-- JavaScript for Filtering -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
      const filterButtons = document.querySelectorAll(".filter-btn");
      const attractionCards = document.querySelectorAll(".attractions-grid > *");
  
      filterButtons.forEach((button) => {
        button.addEventListener("click", (event) => {
          const target = event.currentTarget;
  
          if (!(target instanceof HTMLElement)) return;
  
          const filter = target.getAttribute("data-filter") || "all"; // Ensure it's a string
  
          // Remove active class from all buttons, then add to the clicked button
          filterButtons.forEach((btn) => btn.classList.remove("active"));
          target.classList.add("active");
  
          // Show/hide attractions based on filter
          attractionCards.forEach((card) => {
            if (card instanceof HTMLElement) { // Fix: Ensure it's an HTMLElement
              if (filter === "all" || card.getAttribute("data-type") === filter) {
                card.style.display = "block";
              } else {
                card.style.display = "none";
              }
            }
          });
        });
      });
    });
  </script>
  

<!-- Styling -->
<style>
  .attractions-section {
    text-align: center;
    padding: 2rem;
  }

  .attractions-filters {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
  }

  .filter-btn {
    background: #12763e;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .filter-btn.active {
    background: #0e5b2e;
  }

  .filter-btn:hover {
    background: #0c4a26;
  }

  .attractions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
    justify-content: center;
    padding: 20px;
  }
</style>
