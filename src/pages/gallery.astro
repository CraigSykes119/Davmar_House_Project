---
import Layout from '../layouts/Layout.astro';
import GalleryGrid from '../components/GalleryGrid.astro';
---

<Layout>
  <section class="gallery-page">
    <h1>Gallery</h1>
    <p>Explore the beauty of Davmar House through our curated gallery.</p>
    
    <GalleryGrid />
  </section>
</Layout>

<style>
  .gallery-page {
    text-align: center;
    margin: 3rem 0;
  }

  .gallery-page h1 {
    font-size: 2rem;
    color: #12763e; /* Deep green for headings */
  }

  .gallery-page p {
    font-size: 1.2rem;
    color: #555;
    margin-bottom: 2rem;
  }
</style>
