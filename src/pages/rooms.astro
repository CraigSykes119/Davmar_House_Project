---
import Layout from '../layouts/Layout.astro';
import RoomsList from '../components/RoomsList.astro';
---

<Layout>
  <section class="rooms-hero">
    <h1>Rooms & Rates</h1>
    <p>Comfortable and modern accommodation in the heart of Blarney.</p>
  </section>

  <!-- Facilities Section -->
  <section class="facilities">
    <h2>Our Facilities & Activities Available</h2>
    
    <div class="row">
      <!-- Main Facilities Box -->
      <div class="col-md-6">
        <div class="facility-box">
          <h3>Main Facilities</h3>
          <ul>
            <li>Baggage store</li>
            <li>Picnic area</li>
            <li>Free high-speed fibre broadband internet</li>
            <li>Free WiFi internet</li>
            <li>Common room with fridge, microwave, plates & cutlery</li>
            <li>Free on-site parking</li>
          </ul>
        </div>
      </div>

      <!-- Activities Box -->
      <div class="col-md-6">
        <div class="facility-box">
          <h3>Nearby Activities & Experiences</h3>
          <ul>
            <li>Scenic walks</li>
            <li>Bowling alley</li>
            <li>Cycling</li>
            <li>Fishing</li>
            <li>Golf</li>
            <li>Horse riding</li>
            <li>Mountain biking</li>
            <li>Shopping</li>
            <li>Theatre</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <RoomsList />
</Layout>

